<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:controller="com.example.prova2.Controller.HelloController" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
      style="-fx-background-image: url('./images/Dashboard_Login.jpg');"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

   <ImageView fitHeight="1080" fitWidth="1920" layoutX="5" layoutY="-35" pickOnBounds="true" preserveRatio="true">
      <Image url="@images/Dashboard_Login.jpg"/>
   </ImageView>

   <!-- Campo per la password -->
   <PasswordField fx:id="passwordField" layoutX="386.0" layoutY="483.0" prefHeight="49.0" prefWidth="406.0"
                  style="-fx-background-color: #FFFFFF;"/>

   <!-- Etichetta per l'errore della password -->
   <Label fx:id="passwordErrorLabel" layoutX="386.0" layoutY="540.0" text="Password is required"
          textFill="red" visible="false" />

   <!-- Campo per l'email -->
   <TextField fx:id="emailField" layoutX="386.0" layoutY="371.0" prefHeight="49.0" prefWidth="406.0" style="-fx-background-color: #FFFFFF;">
      <font>
         <Font name="Roboto" size="15.0"/>
      </font>
   </TextField>

   <!-- Etichetta per l'errore dell'email -->
   <Label fx:id="emailErrorLabel" layoutX="386.0" layoutY="430.0" text="Email is required"
          textFill="red" visible="false" />

   <!-- Link per il recupero della password -->
   <Hyperlink layoutX="380.0" layoutY="546.0" prefHeight="45.0" prefWidth="242.0" text="Forgot your password?"
              textFill="#011638" textOverrun="CLIP">
      <font>
         <Font name="Roboto Bold" size="20.0"/>
      </font>
   </Hyperlink>

   <!-- Etichetta Login -->
   <Label layoutX="384.0" layoutY="255.0" text="Login" textFill="#011638">
      <font>
         <Font name="Roboto Bold" size="40.0"/>
      </font>
   </Label>

   <!-- Etichetta per l'email -->
   <Label layoutX="387.0" layoutY="337.0" text="Email" textFill="#011638">
      <font>
         <Font name="Roboto Bold" size="24.0"/>
      </font>
   </Label>

   <!-- Etichetta per la password -->
   <Label layoutX="386.0" layoutY="450.0" text="Password" textFill="#011638">
      <font>
         <Font name="Roboto Bold" size="24.0"/>
      </font>
   </Label>

   <!-- Pulsante Sign In -->
   <Button fx:id="signInButton" layoutX="409.0" layoutY="619.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="359.0"
           style="-fx-background-color: #011638; -fx-font-size: 25; -fx-background-radius: 20; -fx-border-radius: 20; -fx-cursor: hand" text="Sign In" textFill="#fcfcfc" onAction="#handleSignIn">
      <font>
         <Font name="Roboto Bold" size="36.0"/>
      </font>
   </Button>

   <!-- Testo per opzione di social login -->
   <Label layoutX="504.0" layoutY="702.0" text="Or continue with" textFill="#011638">
      <font>
         <Font name="Roboto Bold" size="21.0"/>
      </font>
   </Label>

   <!-- Pulsante per login con Google -->
   <Button layoutX="454.0" layoutY="748.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="121.0"
           style="-fx-background-color: #FFFFFF;">
      <graphic>
         <ImageView fitHeight="59.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/icons8-logo-di-google-48.png"/>
         </ImageView>
      </graphic>
   </Button>

   <!-- Pulsante per login con Facebook -->
   <Button layoutX="609.0" layoutY="748.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="121.0"
           style="-fx-background-color: #FFFFFF;">
      <graphic>
         <ImageView fitHeight="59.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/icons8-facebook-nuovo-48.png"/>
         </ImageView>
      </graphic>
   </Button>

   <!-- Etichetta per "Accedi come" -->
   <Label layoutX="994.0" layoutY="258.0" text="Accedi come" textFill="#011638">
      <font>
         <Font name="Roboto Bold" size="40.0"/>
      </font>
   </Label>

   <!-- Pulsante per "Amministratore" -->
   <Button layoutX="996.0" layoutY="357.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="359.0"
           style="-fx-background-color: #011638; -fx-font-size: 25; -fx-background-radius: 20; -fx-border-radius: 20;" text="Amministratore" textFill="#fcfcfc">
      <font>
         <Font name="Roboto Bold" size="36.0"/>
      </font>
   </Button>

   <!-- Pulsante per "Agente Immobiliare" -->
   <Button layoutX="997.0" layoutY="526.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="359.0"
           style="-fx-background-color: #011638; -fx-font-size: 25; -fx-background-radius: 20; -fx-border-radius: 20;" text="Agente Immobiliare" textFill="#fcfcfc">
      <font>
         <Font name="Roboto Bold" size="36.0"/>
      </font>
   </Button>
</Pane>

